{% extends 'base.html.twig' %}   {# Template de l'index des catégories #}

{% block title %}Index des auteurs | Livres en ligne{% endblock %}

{% block body %}
    <div class="row mt-5">
    	<div class="col-12 col-md-8 offset-md-1">
		    <div class="mb-3">
                {% for message in app.flashes('notice') %}
                    <div class="flash-notice mb-3 text-success">
                        <strong>{{ message }}</strong>
                    </div>
                {% endfor %}
            </div>
	    </div>
    </div>
    <div class="row  mb-5 text-dark">
        <div class="col-12 col-md-4  offset-md-4 my-4">
            <div style="justify-content:center">
                <div class="card rounded pb-5"> 
                    <div class="card-header">
				        <h4 class="card-title uppercase text-center pt-2">Les catégories</h4>	
                    </div>	
                    <div class="card-body">
                        {% for category in categories %}
                            <div class="card-text">
                                <a href="{{ path('category', { id:category.id }) }}">
                                    <div class="d-grid gap-2"> 
                                        <button type="button" class="btn btn-primary text-white mt-5">  {{ category.name }}</button>
                                    </div>
                                </a>
                            </div>
                        {% endfor %}  
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
