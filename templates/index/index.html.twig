{% extends 'base.html.twig' %} {# Template de la page d'accueil avec la liste de tous les livres en vente #}

{% block title %}Accueil | Livres en ligne{% endblock %}
{% block body %}
    <div class="container">
        <div class="row">
	        <div class="col-12 col-md-8 offset-md-2 ">
                <h1 class="text-center uppercase mt-5">Nos ventes !</h1>
			    <div class="mb-3">
                    {% for message in app.flashes('notice') %}
                        <div class="flash-notice mb-3 text-success">
                            <strong>{{ message }}</strong>
                        </div>
                    {% endfor %}
                </div>
	        </div>
        </div>
        <div class="row  mb-5 text-dark">
            {% include ("include/include.html.twig") %}
        </div>
    </div>         
{% endblock %}

